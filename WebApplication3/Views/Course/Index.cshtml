@model IEnumerable<WebApplication3.Models.course>

@{
    ViewBag.Title = "Index";
}

<style>
    body,
    p,
    h1,
    h2,
    h3,
    h4,
    h5,
    h6,
    a {
        font-family: "Poppins", sans-serif;
    }

    .opening {
        margin-top: 50px;
    }

    .opening h2 {
        font-size: 40px;
    }

    .opening p {
        font-size: 1.2rem;
    }

    .navbar-nav .nav-item.course-link.active {
        color: #ffb712;
    }

    #createButton a {
        padding: 10px 15px;
        font-size: 15px;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        border: 1px solid;
        border-radius: 10px;
        color: #ffffff;
        background: linear-gradient(to right, #8a48f4, #d27c6f);
        transition: background-color 0.3s, color 0.3s;
    }

    #createButton:hover a {
        background: linear-gradient(to right, #6e38cc, #a86a5a);
        color: #fafafa;
    }

</style>

<div class="opening">
    <h2>Welcome To Course</h2>
    <p>Courses is a form used to fill in the courses available in the course along with their duration (hours/week). Here, we can add courses, edit courses and durations, and delete them.</p>
</div>


<p id="createButton">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.course1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.duration)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.course1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.duration)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }, new { @class = "btn btn-primary", style ="background-color: green"}) 
            @Html.ActionLink("Details", "Details", new { id=item.id }, new { @class = "btn btn-info", style = "color: #ffffff;"}) 
            @Html.ActionLink("Delete", "Delete", new { id=item.id }, new { @class = "btn btn-danger"})
        </td>
    </tr>
}

</table>
